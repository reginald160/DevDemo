@model DevDemo.ViewModels.UserInfoViewModel

@{
    ViewData["Title"] = "UserUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

<section class="container" style="width: 700px;">
    <form asp-action="UserUpload" asp-controller="UserInfo" enctype="multipart/form-data" method="post" class="form jumbotron">
        <div class="form-row form-group">
            <div class="col-md-12">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="FirstNameinfo"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row form-group">
            <div class="col-md-12">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="UserFiles"></label>
                <input type="file" multiple class="form-control-file-label" asp-for="UserFiles">
                <span asp-validation-for="UserFiles" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row form-group">
            <div class="col-md-12">
                <input type="submit" value="Submit" id="btn" class="btn btn-danger btn-block form-control">
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
